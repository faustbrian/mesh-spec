{
  "name": "cline/forrst",
  "description": "Forrst protocol implementation for PHP - internal microservice RPC with per-function versioning and rich query capabilities",
  "license": "MIT",
  "keywords": [
    "php",
    "forrst",
    "rpc",
    "microservices",
    "api",
    "laravel",
    "internal-api"
  ],
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "illuminate/bus": "^12.28",
    "illuminate/http": "^12.28",
    "illuminate/support": "^12.28",
    "illuminate/validation": "^12.28",
    "saloonphp/saloon": "^3.14.2",
    "spatie/laravel-data": "^4.18.0",
    "symfony/intl": "^7.4.0",
    "cline/webhook": "^1.0"
  },
  "require-dev": {
    "cline/coding-standard": "^1.5.8",
    "orchestra/testbench": "^10.8",
    "symfony/var-dumper": "^7.4.0"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\Forrst\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "lint": "vendor/bin/ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "vendor/bin/ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "pest --parallel --min=90 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=90 --coverage"
  }
}
